include LICENSE
include README.md
include requirements_dev.txt
include pyproject.toml
include tox.ini
include ruff.toml

# Include all Python files in the example directory
recursive-include example *.py

# Include all files in the src/entoli directory
recursive-include src/entoli *

# Exclude all __pycache__ directories
global-exclude __pycache__

# Exclude all .pyc files
global-exclude *.py[cod]

# Include build files in example/build
recursive-include example/build *

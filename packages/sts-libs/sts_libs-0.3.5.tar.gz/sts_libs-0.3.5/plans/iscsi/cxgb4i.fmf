summary: iSCSI tests using interfaces using cxgb4i driver
discover:
  - name: iscsi-offload
    how: fmf
    filter: tag:iscsi-offload
environment:
  PYTEST_VARS: 'cxgb4i.yaml'
provision:
  how: beaker
  hardware:
    hostname: storageqe-87.lab.eng.brq2.redhat.com
adjust+:
  - when: distro == rhel-8
    environment:
      PYTEST_VARS: 'cxgb4i_el8.yaml'
    because: 'RHEL9 and newer append ".ipv4.0 to the default iSCSI
      ifaces"'

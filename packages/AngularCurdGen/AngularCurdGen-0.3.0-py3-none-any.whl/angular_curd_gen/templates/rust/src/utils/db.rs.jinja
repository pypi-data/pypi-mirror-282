use serde::Deserialize;

#[derive(Debug, Deserialize)]
pub struct DatabaseSettings {
    pub user: String,
    pub pswd: String,
    pub host: String,
    pub name: String,
    pub port: i32,
}

impl DatabaseSettings {
    pub fn build_url(&self, db: &str) -> String {
        format!("{}://{}:{}@{}:{}/{}", db, self.user, self.pswd, self.host, self.port, self.name)
    }
}

#[derive(Debug, Deserialize)]
pub struct RedisSettings {
    pub host: String,
    pub db: i32,
    pub port: i32,
}

impl RedisSettings {
    pub fn build_url(&self) -> String {
        format!("redis://{}:{}/{}", self.host, self.port, self.db)
    }
}

use serde::Deserialize;
use crate::utils;

#[derive(Debug, Deserialize)]
pub struct Settings {
    pub debug: bool,
    pub project: String,
    pub port: u16,
    pub db: utils::db::DatabaseSettings,
    pub mongo: utils::db::DatabaseSettings,
    pub redis: utils::db::RedisSettings,

    pub jwt_iss: String,
    pub jwt_secret: String,
    pub jwt_expire: i64,
}

#[derive(Debug, Deserialize)]
pub struct ModuleSettings {
    pub name: String,
}
{% set left = '{{' -%}
{% set right = '}}' -%}
<div class="page">
  <nz-row>
    <nz-col nzSpan="2">
      <h2 nz-typography>仪表盘</h2>
    </nz-col>
    <nz-col class="center-content">
      <nz-breadcrumb>
        <nz-breadcrumb-item routerLink="/">首页</nz-breadcrumb-item>
        <nz-breadcrumb-item routerLink="/{{ app_name }}">
          <a>{{ app_readable_name }}</a>
        </nz-breadcrumb-item>
      </nz-breadcrumb>
    </nz-col>
  </nz-row>
  <nz-divider></nz-divider>
  <nz-row>
    <nz-col nzSpan="8">
      <ul nz-list [nzDataSource]="models" nzBordered nzSize="large">
        @for (item of models; track item) {
          <li nz-list-item nzNoFlex>
            <ul nz-list-item-actions>
              <nz-list-item-action>
                <a routerLink="/{{ app_name }}/{{ left }}item{{ right }}/creator">添加</a>
              </nz-list-item-action>
            </ul>
            <a routerLink="/{{ app_name }}/{{ left }}item{{ right }}">{{ left }} modelsTranslations.get(item) {{ right }}</a>
          </li>
        }
      </ul>
    </nz-col>
  </nz-row>
</div>

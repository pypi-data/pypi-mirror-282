<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="conference">
    <xs:annotation>
      <xs:documentation>
	pas d'auteurs/affiliations : taln-2014-long-017, taln-2014-long-021, taln-2014-long-032, taln-2014-court-018, taln-2014-court-032, taln-2014-demo-002
	pas de numéros de pages : taln-2014-court-003, taln-2014-court-015, taln-2014-court-022, taln-2014-court-034, taln-2014-demo-002, taln-2014-demo-005, taln-2014-demo-007
	problèmes avec les articles des sessions posters étiquetage 1 et 2
	problèmes encodage : taln-2014-court-021
</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element name="edition">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="acronyme"/>
              <xs:element type="xs:string" name="titre"/>
              <xs:element type="xs:string" name="ville"/>
              <xs:element type="xs:string" name="pays"/>
              <xs:element type="xs:date" name="dateDebut"/>
              <xs:element type="xs:date" name="dateFin"/>
              <xs:element name="presidents">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="president" maxOccurs="unbounded" minOccurs="0">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element type="xs:string" name="prenom"/>
                          <xs:element type="xs:string" name="nom"/>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="editeurs">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="editeur">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element type="xs:string" name="prenom"/>
                          <xs:element type="xs:string" name="nom"/>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="typeArticles">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="type" maxOccurs="unbounded" minOccurs="0">
                      <xs:complexType>
                        <xs:simpleContent>
                          <xs:extension base="xs:string">
                            <xs:attribute type="xs:string" name="id" use="optional"/>
                          </xs:extension>
                        </xs:simpleContent>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element type="xs:anyURI" name="siteWeb"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="articles">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="article" maxOccurs="unbounded" minOccurs="0">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="auteurs">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="auteur" maxOccurs="unbounded" minOccurs="0">
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element type="xs:string" name="prenom"/>
                                <xs:element type="xs:string" name="nom"/>
                                <xs:element type="xs:string" name="email" maxOccurs="unbounded" minOccurs="0"/>
                                <xs:element type="xs:byte" name="affiliationId" maxOccurs="unbounded" minOccurs="0"/>
                              </xs:sequence>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="affiliations">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="affiliation" maxOccurs="unbounded" minOccurs="0">
                            <xs:complexType>
                              <xs:simpleContent>
                                <xs:extension base="xs:string">
                                  <xs:attribute type="xs:byte" name="affiliationId" use="optional"/>
                                </xs:extension>
                              </xs:simpleContent>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                    <xs:element type="xs:string" name="titre"/>
                    <xs:element type="xs:string" name="type"/>
                    <xs:element type="xs:string" name="pages"/>
                    <xs:element type="xs:string" name="resume"/>
                    <xs:element type="xs:string" name="mots_cles"/>
                    <xs:element name="title">
                      <xs:complexType>
                        <xs:simpleContent>
                          <xs:extension base="xs:string">
                            <xs:attribute type="xs:string" name="traduction" use="optional"/>
                          </xs:extension>
                        </xs:simpleContent>
                      </xs:complexType>
                    </xs:element>
                    <xs:element type="xs:string" name="abstract"/>
                    <xs:element type="xs:string" name="keywords"/>
                  </xs:sequence>
                  <xs:attribute type="xs:string" name="id" use="optional"/>
                  <xs:attribute type="xs:string" name="session" use="optional"/>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>